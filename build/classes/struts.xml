<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.multipart.maxSize" value="1000000" />

	<package name="default" namespace="/" extends="struts-default">
		<action name="login" class="uAction" method="login">
			<result>/page/login.jsp</result>
		</action>
		<action name="index" class="commodityAction" method="index">
			<result>/page/index.jsp</result>
		</action>
		<action name="regist" class="userAction" method="regist">
			<result>/page/regist.jsp</result>
		</action>
		<action name="xbox" class="goodsAction" method="xbox">
			<result>/page/xbox.jsp</result>
		</action>
		<action name="checkCode" class="userAction" method="checkCode"></action>
		<action name="exit" class="userAction" method="exit">
			<result type="redirect">index</result>
		</action>
		<action name="registaction" class="userAction"
			method="registAction">
			<result name="success" type="redirect">login</result>
			<result name="input">/page/regist.jsp</result>
		</action>

		<action name="loginaction" class="userAction" method="loginAction">
			<result name="success" type="redirect">index</result>
			<result name="input">/page/login.jsp</result>
		</action>
		<action name="detail" class="commodityAction" method="detail">
			<result>/page/product/details.jsp</result>
		</action>
	</package>

	<!-- 需要验证是否登录的action在此package中 -->
	<package name="checklogin" namespace="/"
		extends="struts-default,json-default">
		<interceptors>
			<interceptor name="checklogin" class="cn.service.CheckLoginInterceptor" />
			<interceptor-stack name="login">
				<interceptor-ref name="checklogin" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>
		<!-- 拦截此package中的action -->
		<default-interceptor-ref name="login" />

		<action name="address" class="addressAction" method="address">
			<result>/page/person/address.jsp</result>
			<result name="login" type="redirect">login</result><!-- 验证未通过进入登录页面 -->
		</action>
		<action name="pinfo" class="userAction" method="pinfo">
			<result>/page/person/data.jsp</result>
			<result name="login" type="redirect">login</result><!-- 验证未通过进入登录页面 -->
		</action>
		<action name="discuss" class="orderAction"
			method="discuss">
			<result>/page/person/discuss.jsp</result>
			<result name="login" type="redirect">login</result><!-- 验证未通过进入登录页面 -->
		</action>
		<action name="integral" class="userAction" method="integral">
			<result>/page/person/integral.jsp</result>
			<result name="login" type="redirect">login</result><!-- 验证未通过进入登录页面 -->
		</action>
		<action name="order" class="commodityAction" method="order">
			<result>/page/person/order.jsp</result>
			<result name="login" type="redirect">login</result><!-- 验证未通过进入登录页面 -->
		</action>
		<action name="record" class="orderAction" method="record">
			<result>/page/person/record.jsp</result>
			<result name="login" type="redirect">login</result><!-- 验证未通过进入登录页面 -->
		</action>
		
		<action name="cart" class="orderAction" method="cart">
			<result>/page/cart/cart.jsp</result>
			<result name="login" type="redirect">login</result><!-- 验证未通过进入登录页面 -->
		</action>
		<action name="pay" class="orderAction" method="pay">
			<result>/page/cart/pay.jsp</result>
			<result name="login" type="redirect">login</result><!-- 验证未通过进入登录页面 -->
		</action>
		
		<action name="paygw" class="orderAction" method="payGw">
			<result>/page/cart/pay.jsp</result>
			<result name="login" type="redirect">login</result><!-- 验证未通过进入登录页面 -->
		</action>
		<action name="settlement" class="commodityAction"
			method="settlement">
			<result>/page/cart/settlement.jsp</result>
			<result name="login" type="redirect">login</result><!-- 验证未通过进入登录页面 -->
		</action>
		<action name="manager" class="commodityAction"
			method="manager">
			<result>/page/product/manager.jsp</result>
			<result name="login" type="redirect">login</result><!-- 验证未通过进入登录页面 -->
		</action>
		<action name="addcommodity" class="commodityAction"
			method="addCommodity">
			<result type="redirectAction">manager</result>
			<result name="login" type="redirect">login</result><!-- 验证未通过进入登录页面 -->
		</action>

		<action name="editu" class="userAction" method="editUser">
			<result>/page/person/data.jsp</result>
			<result name="login" type="redirect">login</result><!-- 验证未通过进入登录页面 -->
		</action>

		<action name="addaddr" class="addressAction" method="addAddr">
			<result type="redirectAction">address</result>
			<result name="login" type="redirect">login</result><!-- 验证未通过进入登录页面 -->
		</action>
		<action name="addaddrnosingle" class="addressAction" method="addAddrNoSingle">
			<result type="redirectAction">settlement</result>
			<result name="login" type="redirect">login</result><!-- 验证未通过进入登录页面 -->
		</action>
		
		<action name="addorder" class="orderAction" method="addOrder">
			<result>/page/cart/settlement.jsp</result>
			<result name="login" type="redirect">login</result><!-- 验证未通过进入登录页面 -->
		</action>
		<action name="pj" class="messageAction" method="addPj">
			<result type="redirectAction">index</result>
			<result name="login" type="redirect">login</result><!-- 验证未通过进入登录页面 -->
		</action>
		<action name="msg" class="messageAction" method="getMsg">
			<result>/page/product/msg.jsp</result>
			<result name="login" type="redirect">login</result><!-- 验证未通过进入登录页面 -->
		</action>
		<!-- json格式请求，result是action中的返回值，得有set，get函数 -->
		<action name="delcommodity" class="commodityAction"
			method="delCommodity">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
		<action name="deluser" class="userAction" method="delUser">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
		<action name="deladdr" class="addressAction"
			method="delAddress">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
		<action name="addgw" class="orderAction"
			method="addGw">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
		<action name="updategw" class="orderAction"
			method="updateGw">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
		<action name="delshop" class="orderAction"
			method="delShop">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
		<action name="delorder" class="orderAction"
			method="delOrder">
			<result type="json">
				<param name="root">result</param>
			</result>
		</action>
		
	</package>

</struts>
